.breadcrumbs 
  &__item 
    font-family Roboto
    color #6e6e6e
    display inline-block
    font-size rem(13)
    font-weight 400
    line-height rem(18)
    &:last-child
      &:after 
        content ""
    &:after
      content "â€¢"
      position relative
      color #999
      line-height rem(18)
      font-size rem(15)
      margin 0 10px
      bottom -1px
      
.news 
  float left
  width rem(770)

.sidebar 
  float right
  width rem(372)
  
.menu 
  float right
  display flex
  flex-wrap wrap
  justify-content space-around
  width 100%
  &__item 
    background-color #355aa8
    display block
    margin 0 2px 2px 0
    text-align center
    size(184px,166px)
    &:nth-child(odd)
      background-image url('../img/general/down.png')
      background-repeat no-repeat
      background-size cover
      background-position-x -30px
      &:hover
        background-image none
    &:nth-child(even)
      background-image url('../img/general/up.png')
      background-repeat no-repeat
      background-size cover
      background-position-x -30px
      &:hover
        background-image none
    .icon
      size(rem(58))
      margin: 40px 0 18px 0
      fill #fff  
    .menu__title 
      font-family RobotoSlab
      color #fff
      font-size rem(15.98)
      font-weight 700
      line-height 18px
      transform scaleY(1.0014)

.institutes
  background #fff
  margin-top rem(31)
  width 100%
  &__title
    border-bottom 1px solid #eeedee
    font-family RobotoSlab
    color #333
    font-size: 18px
    font-weight 700
    line-height 66px
    text-align center
    width 100%
  &__item 
    display block
    float left
    box-sizing border-box
    margin 7px 0
    text-align center    
    width 50%
    &:first-child
      border-right 1px solid #eeedee
    &:last-child
      border-top 1px solid #eeedee
  &__logo
    float left
  &__name
    float left
    padding 0 23px 0 8px
    font-family Roboto
    color #333
    font-size 13px
    font-weight 500
    line-height 16px
    transform scaleX(1.0007)

      
      
